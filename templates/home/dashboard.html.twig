{% extends 'base.html.twig' %}

{% block title %}Hello TeamController!{% endblock %}

{% block body %}
{% if app.user %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
  <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="#">Basket Avesnes</a>
  <div class="navbar-nav">
    <div class="nav-item text-nowrap">
      <a class="nav-link px-3" href="{{path('app_logout')}}">Déconnexion</a>
    </div>
  </div>
</header>

<div class="container-fluid">
  <div class="row">
    <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
      <div class="position-sticky pt-3">
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="{{path('app_home')}}">
              <span data-feather="home"></span>
              Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{path('app_allteam_in_dashboard')}}">
              <span data-feather="file"></span>
              Équipe
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">
              <span data-feather="shopping-cart"></span>
              Match
            </a>
          </li>
        </ul>
      </div>
    </nav>

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Dashboard</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
        </div>
      </div>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Email du compte</th>
      <th scope="col">Supprimer le compte</th>
    </tr>
  </thead>
{% for user in users %}
  <tbody>
    <tr>
      <td>{{user.email}}</td>
      <td><a href="{{path('app_user_delete',{id:user.id})}}">Supprimer</a></td>
    </tr>
  </tbody>
  {% endfor %}
</table>
      <canvas class="my-4 w-100" id="myChart" width="900" height="380"></canvas>


    </main>
  </div>
</div>
{% else %}
<div class="container">
<div class="col-12 d-flex justify-content-center align-items-center">
    <div class="row">
        <div class="col-md-12 d-flex flex-column align-items-center text-center justify-content-center">
            <div class="error-template ">
                <h2>Désolé!</h2>
                <div class="error-details">
                   <h4> ceci est réservé aux personnes avec un compte ! </h4>
                </div>
                <div class="error-actions d-flex justify-content-around">
                    <a href="{{path('app_register')}}" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-home"></span>
                        Inscription </a><a href="{{path('app_login')}}" class="btn btn-primary btn-lg"> Connexion </a>
                </div>
            </div>
        </div>
    </div>
  </div>
</div>
{% endif %}
{% endblock %}