{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="col-12 d-flex justify-content-center">


    {{ form_start(registrationForm) }}
        <h1>Inscription</h1>
        {{ form_row(registrationForm.email,{'label': 'Email', 'attr':{'placeholder': 'Entre votre Email','class':'form-control'}}) }}
        {{ form_row(registrationForm.plainPassword, {'label': 'Mot de passe', 'attr':{'placeholder': 'Mot de passe','class':'form-control'}}) }}
        {{ form_row(registrationForm.agreeTerms, {'label':'J\'accepte les conditions utilisateur','class':'form-check-label','attr':{'class':'form-check-input' ,'type':'checkbox', 'id':'invalidCheck2' }} ) }}
        <button class="btn btn-lg btn-primary" type="submit">Inscription</button>
        <p>Déjà un compte ? <a href="{{path('app_login')}}">Connexion</a></p>
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}
